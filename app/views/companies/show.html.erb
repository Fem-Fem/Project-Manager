<h1><%= @company.name %></h1>

<h3><%= @company.motto %></h3>

<h2>Projects: </h2>
<% @company.projects.each do |project| %>
<p>
  <a href = "/projects/<%= project.id %>">
    <%= project.name %>:</a>
  <%= project.description %>
</p>
<% end %>

<h2>Workers: </h2>
<% @company.workers.each do |worker| %>
<p>
  <a href = "/companies/<%=@company.id%>/workers/<%= worker.id %>">
    <%= worker.name %>:</a>
  <%= worker.position %>
</p>
<% end %>
<%= render 'workers/footer' %>
