<h1>All Projects</h1>

<div class="allProjects">
<%= div_for(@projects, class: "project-index-page") do |project| %>
    <ul>
      <li>
      <a href = "/projects/<%= project.id %>"><%= project.name %></a>: <%= project.description %>
      </li>
    </ul>
<% end %>
</div>

<div id="validation-error">
  Validation Error
</div>

<%=@errors%>

<div class="project-form">
  <%= form_for @project do |f| %>
    <%= f.label 'Project Name:' %><br>
    <%= f.text_field :name %><br>
    <%= f.label 'Project Description:' %><br>
    <%= f.text_field :description %><br>
    <%= f.submit "Submit Project", class: "newProject" %>
  <% end %>
</div>

<%= render 'workers/footer' %>
